# dependencies
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# testing
/coverage

# next.js
/.next/
/out/

# production
/build

# misc
.DS_Store
*.pem

# debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# env files (can opt-in for committing if needed)
.env*

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts

/lib/generated/prisma

# Static content - managed independently from code
# These are maintained in REFERENCE APPS folder and deployed separately
# NOTE: GOLDEN_BACKUPS and REFERENCE folders are EXCLUDED from these rules (they should be in git)
/public/worksheet-generators/*.html
!/GOLDEN_BACKUPS/**/*.html
!/REFERENCE*/**/*.html

# Content managers - managed independently from code
# These are maintained in REFERENCE CONTENT MANAGERS folder and deployed separately
/public/worksheet-generators/blog-content-manager.html
/public/homepage-content-manager.html
/public/worksheet-generators/content-manager-v2.html
!/GOLDEN_BACKUPS/**/*content-manager.html
!/REFERENCE*/**/*content-manager.html

# Translation files - managed independently from code
# These are maintained in REFERENCE TRANSLATIONS folder and deployed separately
/public/worksheet-generators/js/translations-*.js
!/GOLDEN_BACKUPS/**/translations-*.js
!/REFERENCE*/**/translations-*.js
