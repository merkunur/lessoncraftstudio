{
  "kind": "collectionType",
  "collectionName": "app_infos",
  "info": {
    "singularName": "app-info",
    "pluralName": "app-infos",
    "displayName": "App Information",
    "description": "Information about worksheet generator apps"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "componentName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "requiredTier": {
      "type": "enumeration",
      "enum": ["free", "core", "full"],
      "default": "core"
    },
    "category": {
      "type": "string"
    },
    "features": {
      "type": "json"
    }
  }
}